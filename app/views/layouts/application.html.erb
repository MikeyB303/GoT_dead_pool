<!DOCTYPE html>
<html>
  <head>
    <title>GoTDeadPool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Game of Thrones Season 8 Dead Pool</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/player_pools">Leaderboard</a>
          </li>
        </ul>
        <% if @pool_available %>
          <a class="btn btn-outline-primary" href="/player_pools/<%= @pool_id %>/edit" role="button">Edit Dead Pool</a>
        <% else %>
          <a class="btn btn-outline-primary" href="/player_pools/new" role="button">Submit Dead Pool</a>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
