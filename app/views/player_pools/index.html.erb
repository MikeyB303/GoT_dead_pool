<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Player Name</th>
        <th>Current Score</th>
        <th>Points Remaining</th>
      </tr>
    </thead>

    <tbody>
      <% @pools.each do |pool| %>
      <tr>
        <td><a href="/player_pools/<%= pool.id %>"><%= pool.player.full_name %></a></td>
        <td><%= pool.score %></td>
        <td><%= pool.points_remaining %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>